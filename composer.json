{
    "name": "igorsgm/laravel-git-hooks",
    "description": "Tools for managing git hooks in Laravel apps",
    "keywords": [
        "igorsgm",
        "laravel-git-hooks",
        "git",
        "git-hooks",
        "pint-pre-commit",
        "pre-commit",
        "pre-commit-hook",
        "pint-pre-commit"
    ],
    "homepage": "https://github.com/igorsgm/laravel-git-hooks",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Igor Moraes",
            "email": "igor.sgm@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "illuminate/container": "^5.6|^6.0|^7.0|^8.0|^9.0",
        "illuminate/config": "^5.6|^6.0|^7.0|^8.0|^9.0",
        "illuminate/support": "^5.6|^6.0|^7.0|^8.0|^9.0",
        "illuminate/contracts": "^5.6|^6.0|^7.0|^8.0|^9.0",
        "illuminate/console": "^5.6|^6.0|^7.0|^8.0|^9.0",
        "illuminate/pipeline": "^5.6|^6.0|^7.0|^8.0|^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4.4",
        "laravel/pint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Igorsgm\\LaravelGitHooks\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Igorsgm\\LaravelGitHooks\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Igorsgm\\LaravelGitHooks\\LaravelGitHooksServiceProvider"
            ],
            "aliases": {
                "LaravelGitHooks": "Igorsgm\\LaravelGitHooks\\LaravelGitHooksFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
